<odoo noupdate="1">
    <record id="module_category_fuel_control" model="ir.module.category">
        <field name="name">Fuel Control</field>
        <field name="sequence">30</field>
    </record>

    <record id="res_group_privilege_fuel" model="res.groups.privilege">
        <field name="name">Fuel Control</field>
        <field name="sequence">50</field>
        <field name="category_id" ref="module_category_fuel_control"/>
    </record>

    <record id="group_fuel_driver" model="res.groups">
        <field name="name"> - Driver</field>
        <field name="privilege_id" ref="res_group_privilege_fuel"/>
    </record>

    <record id="group_fuel_analyst" model="res.groups">
        <field name="name">Fuel Control - Analyst</field>
        <field name="privilege_id" ref="res_group_privilege_fuel"/>
    </record>

    <record id="group_fuel_admin" model="res.groups">
        <field name="name">Fuel Control - Administrator</field>
        <field name="privilege_id" ref="res_group_privilege_fuel"/>
        <field name="implied_ids" eval="[(4, ref('group_fuel_analyst'))]"/>
    </record>

</odoo>
