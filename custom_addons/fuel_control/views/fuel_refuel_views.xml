<odoo>
    <record id="action_fuel_refuel" model="ir.actions.act_window">
        <field name="name">Refuels</field>
        <field name="res_model">fuel.refuel</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a refuel.
            </p>
        </field>
    </record>
    <record id="action_fuel_refuel_report" model="ir.actions.act_window">
        <field name="name">Refuel Report</field>
        <field name="res_model">fuel.refuel</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Analyze refuels.
            </p>
        </field>
    </record>
    <record id="view_fuel_refuel_list" model="ir.ui.view">
        <field name="name">fuel.refuel.list</field>
        <field name="model">fuel.refuel</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="odometer"/>
                <field name="hour_meter"/>
                <field name="liters"/>
                <field name="price_per_liter"/>
                <field name="total_amount"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>
    <record id="view_fuel_refuel_form" model="ir.ui.view">
        <field name="name">fuel.refuel.form</field>
        <field name="model">fuel.refuel</field>
        <field name="arch" type="xml">
            <form string="Refuel">
                <sheet>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="fuel_tank_id"/>
                            <field name="driver_id"/>
                            <field name="date"/>
                            <field name="odometer"/>
                            <field name="hour_meter"/>
                        </group>
                        <group>
                            <field name="liters"/>
                            <field name="price_per_liter"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_fuel_refuel_pivot" model="ir.ui.view">
        <field name="name">fuel.refuel.pivot</field>
        <field name="model">fuel.refuel</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="date" type="row"/>
                <field name="vehicle_id" type="row"/>
                <field name="driver_id" type="row"/>
                <field name="liters" type="measure"/>
                <field name="total_amount" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_fuel_refuel_graph" model="ir.ui.view">
        <field name="name">fuel.refuel.graph</field>
        <field name="model">fuel.refuel</field>
        <field name="arch" type="xml">
            <graph string="Refuels" type="bar">
                <field name="date" type="row"/>
                <field name="liters" type="measure"/>
                <field name="total_amount" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="view_fuel_refuel_search" model="ir.ui.view">
        <field name="name">fuel.refuel.search</field>
        <field name="model">fuel.refuel</field>
        <field name="arch" type="xml">
            <search>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>
    <menuitem
        id="menu_fuel_root"
        name="Fuel Control"
        sequence="10"
        groups="fuel_control.group_fuel_driver,fuel_control.group_fuel_analyst,fuel_control.group_fuel_admin"/>
    <menuitem
        id="menu_fuel_refuel"
        name="Refuels"
        parent="menu_fuel_root"
        action="action_fuel_refuel"
        sequence="10"/>
    <menuitem
        id="menu_fuel_tank_entry"
        name="Stock Entries"
        parent="menu_fuel_root"
        action="action_fuel_tank_entry"
        sequence="15"
        groups="fuel_control.group_fuel_admin"/>
    <menuitem
        id="menu_fuel_tank"
        name="Fuel Tank"
        parent="menu_fuel_root"
        action="action_fuel_tank"
        sequence="20"
        groups="fuel_control.group_fuel_admin"/>
    <menuitem
        id="menu_fuel_reports"
        name="Reports"
        parent="menu_fuel_root"
        sequence="30"
        groups="fuel_control.group_fuel_analyst,fuel_control.group_fuel_admin"/>
    <menuitem
        id="menu_fuel_report_refuel"
        name="Refuels"
        parent="menu_fuel_reports"
        action="action_fuel_refuel_report"
        sequence="10"
        groups="fuel_control.group_fuel_analyst,fuel_control.group_fuel_admin"/>
    <menuitem
        id="menu_fuel_report_entry"
        name="Entries"
        parent="menu_fuel_reports"
        action="action_fuel_tank_entry_report"
        sequence="20"
        groups="fuel_control.group_fuel_analyst,fuel_control.group_fuel_admin"/>
</odoo>
