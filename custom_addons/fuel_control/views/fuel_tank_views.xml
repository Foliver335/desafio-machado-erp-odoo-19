<odoo>

    <record id="action_fuel_tank" model="ir.actions.act_window">
        <field name="name">Fuel Tank</field>
        <field name="res_model">fuel.tank</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Review tank data.
            </p>
        </field>
    </record>
    <record id="view_fuel_tank_list" model="ir.ui.view">
        <field name="name">fuel.tank.list</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="capacity_liters" force_save="1"/>
                <field name="current_stock"/>
                <field name="price_per_liter"/>
            </list>
        </field>
    </record>

    <record id="view_fuel_tank_form" model="ir.ui.view">
        <field name="name">fuel.tank.form</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            
            <form string="Fuel Tank">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                    <group>
                        <field 
                            name="capacity_liters" 
                            readonly="1"
                            force_save="1"/>
                        <field 
                            name="current_stock" 
                            readonly="1"/>
                        <field 
                            name="price_per_liter"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_fuel_tank_search" model="ir.ui.view">
        <field name="name">fuel.tank.search</field>
        <field name="model">fuel.tank</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="capacity_liters"/>
                <field name="current_stock"/>
            </search>
        </field>
    </record>
</odoo>
